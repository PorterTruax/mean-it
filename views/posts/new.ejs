<%- include ../partials/header.ejs%>

	<div class="container">
		<div class="h1 text-center text-success">	
			Create New Post
		</div>
	</div>


	<div class="container">
		<div class="row">
			<div class="col-md-5 mx-auto">
				<div class="border border-dark bg-light rounded mx-auto">
					<div class="mb-2">
						<div class="h3 col-md-12 text-center">
							<%=topic.name%>
						</div>
					</div>


					<form action="/topics/<%=topic._id%>" method="POST" class="text-center p-1" enctype="multipart/form-data">

						<div class="text-danger font-italic"><%=errorMessage%></div>
			
					Name: <input type="text" name="name" class="d-block mx-auto">

					Author: <input type="text" name="author" value="<%=author%>" class="d-block mx-auto">

					Date: <input type="date" name="date" class="d-block mx-auto" id="today">

					Post: <br><textarea name="body" placeholder="What do you want to say?" class="w-75"></textarea>

					img: <input type="file" name="img" class="form-control" id="photoInput"><br>
			
					<button class="mt-1 d-block mx-auto bg-warning">Create Post</button>
					</form>
			</div>
		</div>
	</div>

<%- include ../partials/footer.ejs%>